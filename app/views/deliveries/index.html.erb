<p id="notice"><%= notice %></p>

<h1>Listing Deliveries</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Sender</th>
      <th>Reciever</th>
      <th>From</th>
      <th>To</th>
      <th>Contents</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.sender %></td>
        <td><%= delivery.reciever %></td>
        <td><%= delivery.from %></td>
        <td><%= delivery.to %></td>
        <td><%= delivery.contents %></td>
        <td><%= link_to 'Show', delivery %></td>
        <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
        <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

