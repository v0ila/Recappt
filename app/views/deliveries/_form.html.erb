<%= simple_form_for @delivery do |f| %>
	<%= f.input :sender, placeholder: "name of the sender"%>
	<%= f.input :reciever, placeholder: "name of the reciever" %>
	<%= f.input :from, placeholder: "from address"%>
	<%= f.input :to, placeholder: "to address" %>
	<%= f.input :contents, placeholder: "cargo" %>
	<%= f.submit "Add", class: "btn btn-primary btn-sm"%>
<% end %>
