<p id="notice"><%= notice %></p>

<h4>Ingrediënten</h4>

<table class="table">
  <thead>
    <tr>
      <th>Ingredient</th>
      <th>Van</th>
      <th>Naar</th>
      <th>Beschrijving</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.reciever %></td>
        <td><%= ingredient.from %></td>
        <td><%= ingredient.to %></td>
        <td><%= ingredient.contents %></td>
        <td><%= link_to 'Bekijken', ingredient %></td>
        <td><%= link_to 'Aanpassen', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Verwijderen', ingredient, method: :delete, data: { confirm: 'Bevestig verwijdering van ingrediënt' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nieuw ingredient', new_ingredient_path %>
