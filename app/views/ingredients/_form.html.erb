<%= simple_form_for @ingredient do |f| %>
	<%= f.input :reciever, placeholder: "Naam recept" %>
	<%= f.input :from, placeholder: "Locatie ingrediënt 1"%>
	<%= f.input :to, placeholder: "Locatie ingrediënt 2" %>
	<%= f.input :contents, placeholder: "Overige ingredienten" %>
	<%= f.submit "Toevoegen", class: "button"%>
<% end %>
